{
    "version": 2,
    "functions": {
      "api/**/*.js": {
        "memory": 1024,
        "maxDuration": 10
      }
    },
    "builds": [
      { "src": "server.js", "use": "@vercel/node" }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/api/$1"
      },
      {
        "src": "/uploads/(.*)",
        "dest": "/uploads/$1"
      }
    ],
    "env": {
      "MONGO_URI": "@mongo-uri" 
    }
  }
  